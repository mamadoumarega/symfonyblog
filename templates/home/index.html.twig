{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <h1>Bienvenu(e) sur la page d'acceuil</h1>
    <div class="row">
        <div class="col-md-8">
           <div class="row">
               {% for article in articles %}
                   <div class="card col-md-4 m-1" style="width: 18rem;">
                       <p class="date">
                           Ecrit le {{  article.createdAt | date('d/m/y')}} Ã  {{  article.createdAt | date('H:i')}}
                           par {{ article.author }}
                       </p>
                       <img src="/assets/blog/images/{{ article.image }}" class="card-img-top img-fluid" alt="{{ article.image }}">
                       <div class="card-body">
                           <h5 class="card-title">{{ article.title }}</h5>
                           {# <p class="card-text">{{ article.content }}</p> #}
                           <button class="btn">
                               <a href="{{ path('show', {id: article.id}) }}" class="btn btn-primary">En savoir plus</a>
                           </button>
                       </div>
                   </div>
               {% endfor %}
           </div>
        </div>
        <div class="col-md-4">
            <H2>Categories</H2>
            <ul class="list-group">
                {% for category in categories %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('show_article', {id: category.id}) }}">
                            {{ category.title }}
                            <span class="badge bg-primary rounded-pill">{{ category.articles | length }} articles</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

    </div>
{% endblock %}
